sys-kernel/gentoo-kernel savedconfig


ls /var/db/repos/gentoo/sys-kernel/gentoo-kernel/

ebuild /var/db/repos/gentoo/sys-kernel/gentoo-kernel/gentoo-kernel-5.4.88.ebuild configure

cd /var/tmp/portage/sys-kernel/gentoo-kernel-5.4.88/work/modprep

make menuconfig

Device Drivers  --->
    
    Graphics support  --->
        < > ATI Radeon

        -*- Backlight & LCD device support  --->
            <*>     Generic (aka Sharp Corgi) Backlight Driver

cd -

cp /var/tmp/portage/sys-kernel/gentoo-kernel-5.4.88/work/modprep/.config /etc/portage/savedconfig/sys-kernel/gentoo-kernel

echo sys-kernel/gentoo-kernel savedconfig >> /etc/portage/package.use/custom.use

emerge --ask sys-kernel/gentoo-kernel 
